<% @tv_programs.each do |t| %>
  <div class="article" >
    <div class="article-overview">
      <%= link_to tv_program_top_show_path(t.id, prefecture_id: @prefecture_id) do %>
        <p class="article-title">
          <%= t[:title] %>
        </p>
      <% end %>
      <p class="article-content">
        放送時間：<%= t[:time] %>
      </p>
      <p class="article-content">
        番組概要：<%= t[:overview] %>
      <p class="article-content">
        出演者：<%= t[:performer] %>
      </p>
    </div>
  </div>
<% end %>